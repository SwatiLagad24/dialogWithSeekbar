<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:background="@color/grey"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:barrierDirection="right"
        android:thumbTint="@color/black"
        android:backgroundTint="@color/black"
            android:progressTint="@color/black"
        android:progressBackgroundTint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2" />


    <TextView
        android:id="@+id/txt1"

        android:layout_width="298dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Price Filter"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt2"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>




    <CheckBox
        android:id="@+id/ch1Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="1 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"
        android:buttonTint="@color/black"/>

    <CheckBox
        android:id="@+id/ch2Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="2 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ch1Bhk"
        android:buttonTint="@color/black"/>

    <CheckBox
        android:id="@+id/ch3Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="3 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ch2Bhk"
        android:buttonTint="@color/black"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_marginLeft="90dp"

        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="OK"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch3Bhk" />

</androidx.constraintlayout.widget.ConstraintLayout>
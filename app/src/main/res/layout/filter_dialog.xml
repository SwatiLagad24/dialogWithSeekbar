<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<SeekBar
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@id/txt1"
    android:id="@+id/seekbar"


    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:text="Price Filter"

        android:id="@+id/txt1"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>




    <CheckBox
        android:id="@+id/ch1Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="1 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"
        android:buttonTint="@color/black"/>

    <CheckBox
        android:id="@+id/ch2Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="2 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ch1Bhk"
        android:buttonTint="@color/black"/>

    <CheckBox
        android:id="@+id/ch3Bhk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="3 BHK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ch2Bhk"
        android:buttonTint="@color/black"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnOK"
        android:text="OK"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        app:layout_constraintTop_toBottomOf="@id/ch3Bhk"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>